<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Bedrock.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/recycler_item_image_padding</item>
    </style>

    <style name="Bedrock.ImageView" parent="">
        <item name="android:padding">@dimen/recycler_item_image_padding</item>
    </style>

    <style name="Bedrock.Divider" parent="">
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginStart">@dimen/divider_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/divider_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/divider_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_vertical_margin</item>
    </style>

    <style name="Bedrock.SetupImageTextPair" parent="">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/setup_image_text_pair_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/setup_image_text_pair_horizontal_margin</item>
    </style>

    <style name="Widget.Bedrock.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_marginTop">@dimen/recycler_item_margin</item>
        <item name="android:layout_marginStart">@dimen/recycler_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/recycler_item_margin</item>
    </style>

    <style name="Widget.Bedrock.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_marginBottom">@dimen/floating_action_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/floating_action_button_margin</item>
    </style>
</resources>